<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhixiangzhonggong.tiebaobei.Activity.ShowProductsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#395691"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/feed_back_image"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:src="@drawable/white_arrow"/>

            <TextView
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="返回"
                android:gravity="left"
                android:textColor="#FFFFFF">
            </TextView>

            <TextView
                android:id="@+id/machine_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
               android:text="机器"
                android:textColor="#FFFFFF">
            </TextView>

            <ImageView
                android:id="@+id/feedingback_login_small_people_image"
                android:layout_width="15dp"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/search_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginRight="1dp"
               android:layout_marginBottom="3dp"

                android:layout_gravity="right"
                android:src="@drawable/my_triangle"/>
            <TextView
                    android:id="@+id/brand_id"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#395691"
                    android:textSize="15dp"
                    android:text="品牌"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="3dp"
                android:scaleType="centerInside"
                android:layout_gravity="bottom|right"
                android:src="@drawable/my_triangle"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#395691"
                android:text="价格"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="3dp"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:src="@drawable/my_triangle"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#395691"
                android:text="省市"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:scaleType="centerInside"
                android:layout_marginRight="1dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/my_triangle"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#395691"
                android:text="更多"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:scaleType="centerInside"
                android:layout_marginRight="1dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/my_triangle"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#395691"
                android:text="排序"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/show_fragment_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>
    <ListView
        android:id="@+id/products_list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        />

    </LinearLayout>

