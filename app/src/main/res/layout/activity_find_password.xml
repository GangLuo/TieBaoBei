<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/find_password_activity"
    android:orientation="vertical"
    tools:context="com.zhixiangzhonggong.tiebaobei.Activity.FindPasswordActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#395691"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/find_password_back_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/white_arrow"/>

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="返回"
            android:gravity="left"
            android:textColor="#FFFFFF">
        </TextView>

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text= "找回密码"
            android:textColor="#FFFFFF">
        </TextView>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/sign_up_input_field_id"
        android:gravity="center">

        <TextView android:text="请输入您地邮箱地址："
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="20dp" />

            <EditText
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:id="@+id/find_password_emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/emailField"
                android:layout_alignLeft="@id/emailField"
                android:hint="@string/signUp_email"
                />

            <TextView android:text="请输入两次新密码："
                android:layout_width="fill_parent"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:layout_height="20dp" />

            <EditText
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:id="@+id/find_password_passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingLeft="20dp"
                android:layout_below="@+id/emailField"
                android:hint="@string/signUp_password"
                />

            <EditText
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:id="@+id/find_password_confirmPwText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:layout_below="@+id/passwordText"
                android:hint="@string/signUp_comfirm_password"
                />

        <Button
            android:layout_weight="1"
            android:id="@+id/find_password_activity_finish_Button"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="200dp"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/rounded2"/>
</LinearLayout>
</LinearLayout>