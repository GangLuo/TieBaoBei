<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#D5E7ED"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/setting_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/list_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="10dp"
                android:text="Setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="25dp"
                android:text="智象重工"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/search_icon"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
               android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:src="@drawable/login_small_people"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="left|center"

                android:layout_marginRight="5dp"
                android:hint="Please input model..."
                android:layout_weight="3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#F5740A"
                android:layout_weight="10"
                android:text="Search"/>
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#57B4D4"
            android:textSize="10dp"
            android:text="Please select your machine type or serach model directly"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="120"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D47757"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:layout_weight="1"
                    android:text="搅拌车"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#B657D4"
                    android:textSize="40dp"
                    android:layout_weight="1"
                    android:text="泵车"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#57B4D4"
                    android:textSize="40dp"
                    android:layout_weight="1"
                    android:text="配件"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#76D457"
                    android:textSize="40dp"
                    android:layout_weight="1"
                    android:text="砂浆泵"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#F5740A"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_small_people"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Machine"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
