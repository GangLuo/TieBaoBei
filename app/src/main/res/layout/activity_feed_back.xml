<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/feedbackLayout"
    android:background="#F5E8E4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zhixiangzhonggong.tiebaobei.Activity.FeedBackActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#395691"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/feed_back_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/white_arrow"/>

            <TextView
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="返回"
                android:gravity="left"
                android:textColor="#FFFFFF">
            </TextView>

            <TextView
                android:id="@+id/login_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text= "意见反馈"
                android:textColor="#FFFFFF">
            </TextView>

            <ImageView
                android:id="@+id/feedingback_login_small_people_image"
                android:layout_width="15dp"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/login_small_people"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="感谢您的宝贵意见"/>

        <EditText
            android:id="@+id/feedback_advice_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="6"
            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:gravity="top|left"
            android:maxLines="10"
            android:imeOptions="actionDone"
            android:scrollbars="vertical"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="欢迎您提出使用客户端的意见和感受，以便我们进行更好的改进，谢谢"
            />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            android:gravity="center|left"
            android:text="您的联系方式"/>

        <EditText
            android:id="@+id/feedback_contact_id"
            android:background="@drawable/rounded"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:paddingTop="2dp"
            android:paddingLeft="3dp"
            android:maxLines="6"
            android:lines="3"
            android:ems="10"
            android:imeOptions="actionDone"
            android:hint="请留下您的手机号或QQ号码"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/rounded2"/>
        </LinearLayout>

    </LinearLayout>

